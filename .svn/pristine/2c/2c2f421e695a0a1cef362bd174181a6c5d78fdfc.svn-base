.conMain {
	width: 100%;
	height: auto;
	border-radius: 3px;
	box-shadow: 1px 1px 5px #888888;
}

.profirm {
	width: 100%;
	height: 100px;
	margin-top: 20px;
	background-color: #FFF;
	border: 1px solid #ccc;
}

.glyphicon-globe {
	position: absolute;
	font-size: 60px;
	margin-top: 20px;
	line-height: 100px;
	margin-left: 20px;
	color: #99CCFF;
}

.profirm div {
	margin: 20px 100px;
}

.imgMain {
	width: 100%;
	height: 400px;
}

.imgMain img {
	width: 100%;
	height: 100%;
}